<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/product_returnPrev"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="&lt;" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_returnPrev"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/product_returnPrev" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/product_imageView1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/visiting_photo" />

            <ImageView
                android:id="@+id/product_imageView2"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:src="@drawable/extra2" />

            <ImageView
                android:id="@+id/product_imageView3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/small_movieproduction" />

        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>
