<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/chat_Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/chatReturnPrev"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:onClick="BackToMain"
            android:text="@string/back" />

        <ImageView
            android:id="@+id/chat_weChatLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/WeChat"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/chat_title"
            android:layout_width="0dip"
            android:layout_height="34dp"
            android:layout_weight="0.21"
            android:text="@string/mockCompany"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/chat_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="0dp"
            android:contentDescription="@string/Person"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_dialog"
        android:layout_width="fill_parent"
        android:layout_height="126dp"
        android:layout_below="@+id/chat_Header"
        android:layout_marginTop="42dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/chat_dialog_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/dialog_time"
            android:textStyle="italic" />

        <ScrollView
            android:id="@+id/chat_dialog_scroll"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="top"
            android:layout_marginTop="0dp"
            android:fillViewport="true"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp" >

                <ImageView
                    android:id="@+id/chat_dialog_personPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="54dp"
                    android:layout_weight="0"
                    android:src="@android:drawable/ic_menu_compass" />

                <TextView
                    android:id="@+id/chat_dialog_text"
                    android:layout_width="0dip"
                    android:layout_height="112dp"
                    android:layout_weight="0.21"
                    android:text="@string/dialog_content" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>