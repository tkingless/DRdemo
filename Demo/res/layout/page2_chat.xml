<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/chat_Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/chatReturnPrev"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="@string/back" />

        <ImageView
            android:id="@+id/chat_weChatLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/WeChat"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/chat_title"
            android:layout_width="0dip"
            android:layout_height="34dp"
            android:layout_weight="0.21"
            android:text="@string/mockCompany"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/chat_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="0dp"
            android:contentDescription="@string/Person"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_dialog"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/chat_Header"
        android:layout_marginTop="42dp"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/chat_dialog_scroll"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="top"
            android:layout_marginTop="0dp"
            android:fillViewport="true"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical" >

            <LinearLayout
                android:id="@+id/chat_dialogGroup"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="0dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/chat_dialog1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="0dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/dialog_time" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:text="@string/dialog_content" />

                        <ImageView
                            android:id="@+id/dialogLogo1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:src="@drawable/logo_small" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chat_dialog2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/dialog_time" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp" >

                        <ImageView
                            android:id="@+id/ImageView01"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:src="@drawable/logo_small" />

                        <LinearLayout
                            android:id="@+id/LinearLayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/TextView01"
                                android:layout_width="200dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="20dp"
                                android:text="如何拍攝品質好的訪問片" />

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="fill_parent"
                                android:layout_height="90dp"
                                android:src="@drawable/extra1" />

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="現今社會，大少企業皆雖拍攝不少對外或對內的訪問片段，以提升團隊士氣和對和形象，看完這文章望能令各位拍攝到品質好的訪問片。" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chat_dialog3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="0dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/dialog_time" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:id="@+id/ImageView02"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:src="@drawable/logo_small" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/TextView03"
                                android:layout_width="250dp"
                                android:layout_height="50dp"
                                android:text="香港觀塘月華街105?大有商業大廈7樓701室" />

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/map" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chat_dialog4"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/dialog_time" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp" >

                        <ImageView
                            android:id="@+id/ImageView04"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:src="@drawable/logo_small" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/TextView07"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="20dp"
                                android:text="電話:(+852)96086279(RYAN)/(+852)23801341(電話)"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:text="傳真:23801521" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:text="電郵:drmmkyr@gmail.com" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="0dp" >

        <ImageButton
            android:id="@+id/chat_keyboardSwitch"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit" />

        <Button
            android:id="@+id/chat_companyService"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/chat_layout_functionalBtn1"
            android:textSize="15sp" />

        <Button
            android:id="@+id/chat_productionsharing"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/productionsharing"
            android:textSize="15sp" />

        <Button
            android:id="@+id/chat_subscribe"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/RealTimeService"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chatPopup"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="48dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/id_chat_layout_functionalBtn1_pop1"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="@string/chat_layout_functionalBtn1_pop1"
            android:textSize="15sp" />

        <Button
            android:id="@+id/id_chat_layout_functionalBtn1_pop2"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="@string/chat_layout_functionalBtn1_pop2"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chatPopup2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_above="@+id/linearLayout1"
        android:layout_toRightOf="@+id/chatPopup"
        android:orientation="vertical"
        android:visibility="invisible" >

        <Button
            android:id="@+id/id_chat_layout_functionalBtn2_pop"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:text="@string/chat_layout_functionalBtn2_pop"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chatPopup3"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/chatPopup2"
        android:layout_toRightOf="@+id/chatPopup2"
        android:orientation="vertical"
        android:visibility="invisible" >

        <Button
            android:id="@+id/id_chat_layout_functionalBtn3_pop"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:text="@string/chat_layout_functionalBtn3_pop1"
            android:textSize="15sp" />

        <Button
            android:id="@+id/id_chat_layout_functionalBtn3_pop2"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:text="@string/chat_layout_functionalBtn3_pop2" />
    </LinearLayout>

</RelativeLayout>