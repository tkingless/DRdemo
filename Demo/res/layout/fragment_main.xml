<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.demo.MainActivity$PlaceholderFragment" >

   	<Button
   	    android:id="@+id/buttonEnter"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignParentRight="true"
   	    android:layout_below="@+id/radioGroupSelection"
   	    android:layout_marginRight="29dp"
   	    android:layout_marginTop="98dp"
   	    android:onClick="Enter"
   	    android:text="@string/Enter" />

    <RadioGroup
        android:id="@+id/radioGroupSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="88dp" >

        <RadioButton
            android:id="@+id/radioClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/generalUser" />

        <RadioButton
            android:id="@+id/radioCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/companyExclusive" />

    </RadioGroup>

</RelativeLayout>
